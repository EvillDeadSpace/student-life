datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  ime       String
  prezime   String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lokacija  String   @default("Sarajevo")

  // Relation with post
  posts   Post[]
  Comment Comment[]
  likes   Likes[]
}

model Post {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  ime        String
  prezime    String
  naslov     String
  tekst      String
  datum      DateTime @default(now())
  lajkovi    Int      @default(0)
  kategorija String   @default("fakultet")

  likes   Likes[]
  Comment Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    Int 
  user      User     @relation(fields: [userId], references: [id])
  postId    Int 
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
}

model Likes {
  id     Int @id @default(autoincrement())
  userId Int
  postId Int

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}
