datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  ime       String
  prezime   String
  email     String   @unique
  password  String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lokacija  String   @default("Sarajevo") 

 // Relation with post
  posts     Post[]
}
model Post {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  ime         String
  prezime     String
  naslov      String
  tekst       String    
  datum       DateTime @default(now())
  lajkovi     Int      @default(0)
  kategorija  String   @default("fakultet")
}